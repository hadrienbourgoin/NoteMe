<button>
  <%= link_to '+', new_group_path %>
</button>
<% @groups.each do |group| %>
  <p>
    <%= link_to group.name, group_path(group) %>
    <%= "#{group.students.count} students" %>
    <button><%= link_to '!', edit_group_path(group) %></button>
    <button><%= link_to 'x', group_path(group), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></button>
    </p>
<% end %>
