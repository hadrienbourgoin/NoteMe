<button class='h42 mb8'>
  <%= link_to '+', new_group_path %>
</button>
<% @groups.each do |group| %>
  <div class='flex'>
    <%= link_to group.name, group_path(group), class: 'div200' %>
    <button><%= link_to '!', edit_group_path(group) %></button>
    <button><%= link_to 'x', group_path(group), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></button>
  </div>
  <p class='mt0 mb8 mt8'><%= "#{group.students.count} students" %></p>
<% end %>
