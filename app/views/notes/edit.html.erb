<h2 class='mt4 mb4'>
  <%= link_to @note.student.group.name, group_path(@note.student.group) %> &lt
  <%= link_to @note.student.firstname, group_student_path(@note.student.group, @note.student) %>
</h2>
<div class="super-form">
  <%= simple_form_for(@note, url: note_path(query: @note.student), method: :patch) do |f| %>
    <%= f.input :description, placeholder: @note.description, label: 'Note', maxlength: 255, as: :text %>
    <%= f.submit "Save", class: "super-button" %>
  <% end %>
</div>
